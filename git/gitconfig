[push]
  default                 = current
[pull]
  default                 = current
  rebase                  = true
[color]
  ui                      = true
  diff                    = auto
  branch                  = auto
  interactive             = auto
[color "status"]
  added                   = green
  changed                 = yellow
  untracked               = cyan
  deleted                 = red
[color "diff"]
  meta                    = bold cyan
[color "grep"]
