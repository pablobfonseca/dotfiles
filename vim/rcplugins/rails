" Rails.vim - Help for working with Rails projects in vim

Plug 'tpope/vim-rails'

nnoremap <leader>rs :Server<cr>
nnoremap <leader>rc :Console<cr>

let g:rails_projections = {
      \ 'app/services/*.rb': {
      \   'command': 'service',
      \ },
      \ 'app/mappers/*.rb': {'command': 'mapper'}}

" vim:ft=vim
