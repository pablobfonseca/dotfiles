function take {
  mkdir $1
  cd $1
}

rvmlist() {
    local rb
    rb=$((echo system; rvm list | grep ruby | awk '{print $2}') |
    fzf --tmux --prompt "Ruby version: ") && rvm use $rb
}


nvmlist() {
    local njs
    njs=$(fnm list | awk '{print $2}' | fzf --tmux --prompt "Node version: ") && fnm use $njs
}

chromeaction() {
  local tabs_json selected_tab tab_id action js_code tmpfile

  tabs_json=$(OUTPUT_FORMAT=json chrome-cli list tabs)

  selected_tab=$(echo "$tabs_json" | jq -r '.tabs[] | "[\(.id)] \(.title) - \(.url)"' | fzf --tmux --prompt="Select a chrome tab: ")

  [[ -z "$selected_tab" ]] && return

  tab_id=$(echo "$selected_tab" | sed -n 's/^\[\([0-9]*\)\].*/\1/p')

  [[ -z "$tab_id" ]] && echo "Could not extract tab ID" && return 1

  action=$(printf "activate\nclose\nreload\nexecute" | fzf --tmux --prompt="Choose an action: ")

  [[ -z "$action" ]] && return

  case "$action" in
    activate) chrome-cli activate -t "$tab_id" ;;
    close) chrome-cli close -t "$tab_id" ;;
    reload) chrome-cli reload -t "$tab_id" ;;
    execute)
      tmpfile=$(mktemp /tmp/chrome-js.XXXXXX.js)
      echo "// Write JS code to run in the Chrome Tab. Save & Exit to execute." > "$tmpfile"
      echo "" >> "$tmpfile"

      "${EDITOR:-nvim}" "$tmpfile"

      js_code=$(grep -v '^\s*//' "$tmpfile" | sed '/^\s*$/d')

      rm -f "$tmpfile"

      if [[ -n "$js_code" ]]; then
        chrome-cli execute "$js_code" -t "$tab_id"
      else
        echo "No JS. Aborting"
      fi
      ;;
    *) echo "Unknown action: $action" ;;
  esac
}

function branch_clean() {
    git checkout master && git branch --merged | grep -v master | xargs git branch -d
}

docker_rmi() {
    local image
    image=$(docker images | awk '(NR>1) { print $1 " " $3; }' | fzf --tmux) \
    && docker rmi $(cut -d' ' -f2 <<< "$image") --force
}

docker_attach() {
    local container
    container=$(docker ps | awk 'NR>1 { print $1 " " $NF; }' | fzf --tmux) \
    && docker attach $(cut -d' ' -f1 <<< "$container")
}

docker_stop() {
    local container
    container=$(docker ps | awk 'NR>1 { print $1 " " $NF; }' | fzf --tmux) \
    && docker stop $(cut -d' ' -f1 <<< "$container")
}

# TODO: check if the service is found
function _ur() {
   local service;
   service="$(yq '.services | keys' $UPSCOPE_DIR/docker-compose.yaml | sed 's/- //' | fzf --tmux --prompt 'Select a service to restart: ')"
   upscope restart $service
}

# TODO: check if the service is found
function _ul() {
  local service;
  service="$(yq '.services | keys' $UPSCOPE_DIR/docker-compose.yaml | sed 's/- //' | fzf --tmux --prompt 'Select a service to see the logs: ')"
  upscope logs $service
}

function git_test() {
  local file;
  file=$(git status --porcelain -- '*.test.ts' | cut -c4- | fzf --tmux --prompt "Select a test file: ") \
    && upscope test api -t $file
}

zle -N git_test
bindkey "^x^t" git_test

open_file() {
  fd --type f --hidden --exclude .git | fzf --tmux --prompt "Open File: " | xargs nvim
}

copy_file_path() {
  fd --type f --hidden --exclude .git | fzf \
    --prompt "Select file: " \
    --preview 'bat -n --color=always --line-range :500 {}' \
    --header 'Enter: insert into pane | Ctrl-Y: copy' \
    --bind "enter:execute-silent(tmux send-keys -t $TMUX_TARGET_PANE './{}')+abort" \
    --bind "ctrl-y:execute-silent(echo -n './{}'| pbcopy)+abort"
}

function y() {
  local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
  yazi "$@" --cwd-file="$tmp"
  if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
    builtin cd -- "$cwd"
  fi
  rm -f -- "$tmp"
}

zle -N open_file
bindkey "^P" open_file

